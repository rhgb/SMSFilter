<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
	<Spinner android:id="@+id/filter_type_spinner"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         />
	<Spinner android:id="@+id/filter_state_spinner"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         />
	<EditText android:id="@+id/filter_content_edit"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:hint="@string/filter_content_edit_hint"
	          android:inputType="phone"
	          />
	<EditText
			android:id="@+id/filter_desc_edit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/filter_desc_edit_hint"
			android:inputType="text"/>
</LinearLayout>